@using Nop.Plugin.Baramjk.PhotoPlatform.Areas.Admin.Models.CashierEvents
@model ChangeCashierBalanceViewModel

@{
    ViewBag.PageTitle = T("Nop.Plugin.Baramjk.PhotoPlatform.Admin.ChangeCashierBalanceViewModel.Title").Text;
    Layout = "~/Areas/Admin/Views/Shared/_AdminPopupLayout.cshtml";
}


<form asp-controller="CashierEvent" asp-action="ChangeBalance" method="post" id="change-balance-form">

    <section class="content">
        <div class="container-fluid">
            <div class="content-header clearfix">
                <h1 class="float-left">

                    @T("Nop.Plugin.Baramjk.PhotoPlatform.Admin.ChangeCashierBalanceViewModel.Title").Text

                </h1>
            </div>
            <div class="form-horizontal">
                <div class="card card-default">
                    <input type="hidden" asp-for="CashierEventId" value="@Model.CashierEventId"/>
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="ChangeAmount"/>
                            </div>
                            <div class="col-md-5">
                                <nop-editor asp-for="ChangeAmount"/>
                                <span asp-validation-for="ChangeAmount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-2">
                            <div class="col-md-3">
                                <nop-label asp-for="ChangeType"/>
                            </div>
                            <div class="col-md-5">
                                <nop-select
                                    asp-for="ChangeType"
                                    asp-items="Model.AvailableChangeTypes"
                                    id="ChangeType"/>

                                <span asp-validation-for="ChangeType" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="far fa-save"></i>
                            @T("Admin.Common.Save")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

</form>

<script>
    $('#change-balance-form').on('submit', function (e) {
        e.preventDefault();
        const form = this;
        const data = $(form).serialize();
        $.post(form.action, data)
            .done(function () {
                const refreshBtnId = @Html.Raw(Json.Serialize(Context.Request.Query["RefreshBtnId"]));
                window.opener?.document.getElementById(refreshBtnId)?.click();
                window.close();
            })
            .fail(function (err) {
                console.log(err)

            });
    });
</script>