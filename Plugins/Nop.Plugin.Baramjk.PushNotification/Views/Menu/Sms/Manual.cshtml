@model Nop.Plugin.Baramjk.PushNotification.Domain.ManualSendSmsModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    Html.SetActiveMenuItemSystemName("BaramjkMenu_PushNotification_ManualSms");
}

<form asp-controller="SmsAdmin" asp-action="DoSendManualSms" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            <small>
                <i class="fa fa-arrow-circle-left"></i>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="card-group">
                <div class="card card-default">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="Receptor"/>
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="Receptor" asp-required="true"/>
                                <span asp-validation-for="Receptor"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="Text"/>
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="Text" asp-required="true"/>
                                <span asp-validation-for="Text"></span>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>