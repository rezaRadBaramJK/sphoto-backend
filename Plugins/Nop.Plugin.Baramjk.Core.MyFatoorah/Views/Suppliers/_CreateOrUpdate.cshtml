
@using Nop.Plugin.Baramjk.Core.MyFatoorah.Models.Suppliers
@model Nop.Plugin.Baramjk.Core.MyFatoorah.Models.Suppliers.SupplierViewModel

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="card card-default">
                <div class="card-body">

                    <input asp-for="Id" type="hidden"/>

                    @(await Html.LocalizedEditorAsync<SupplierViewModel, SupplierLocalizationModel>("supplier-localized",
                        @<div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.Locales[item].Name"/>
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="@Model.Locales[item].Name"/>
                                    <span asp-validation-for="@Model.Locales[item].Name"></span>
                                </div>
                            </div>
                            <input type="hidden" asp-for="@Model.Locales[item].LanguageId"/>
                        </div>,
                        @<div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="Name"/>
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="Name"/>
                                    <span asp-validation-for="Name"></span>
                                </div>
                            </div>
                        </div>
                    ))

                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="SupplierCode"/>
                        </div>
                        <div class="col-md-9">
                            <input class="form-control text-box single-line" disabled="disabled" asp-for="SupplierCode">
                            <span asp-validation-for="SupplierCode"></span>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="Email"/>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Email" asp-disabled="true" />
                            <span asp-validation-for="Email"></span>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="Mobile"/>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Mobile" asp-disabled="true" />
                            <span asp-validation-for="Mobile"></span>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="Status"/>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Status" asp-disabled="true" />
                            <span asp-validation-for="Status"></span>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="CommissionValue"/>
                        </div>
                        <div class="col-md-9">
                            <input class="form-control text-box single-line" disabled="disabled" asp-for="CommissionValue">
                            <span asp-validation-for="CommissionValue"></span>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="CommissionPercentage"/>
                        </div>
                        <div class="col-md-9">
                            <input class="form-control text-box single-line" disabled="disabled" asp-for="CommissionPercentage">
                            <span asp-validation-for="CommissionPercentage"></span>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</section>