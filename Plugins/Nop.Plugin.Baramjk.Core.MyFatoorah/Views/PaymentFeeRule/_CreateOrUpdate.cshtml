@model Nop.Plugin.Baramjk.Core.MyFatoorah.Models.PaymentFeeRule.PaymentFeeRuleViewModel

@{
}

<div class="container-fluid">
    <div class="form-horizontal">
        <div class="card card-default">
            <div class="card-body">


                <div class="form-group row mt-2">
                    <div class="col-md-3">
                        <nop-label asp-for="PaymentMethodId"/>
                    </div>
                    <div class="col-md-9">
                        <nop-select
                            asp-for="PaymentMethodId"
                            asp-items="Model.AvailablePaymentMethods"
                        />
                        <span asp-validation-for="PaymentMethodId" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row mt-2">
                    <div class="col-md-3">
                        <nop-label asp-for="CountryId"/>
                    </div>
                    <div class="col-md-9">
                        <nop-select
                            asp-for="CountryId"
                            asp-items="Model.AvailableCountries"/>
                        <span asp-validation-for="CountryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="AdditionalFee"/>
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AdditionalFee"/>
                        <span asp-validation-for="AdditionalFee"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="AdditionalFeePercentage"/>
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AdditionalFeePercentage"/>
                        <span asp-validation-for="AdditionalFeePercentage"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="Active"/>
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Active"/>
                        <span asp-validation-for="Active"></span>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>

    
        