
@model Nop.Plugin.Baramjk.PhotoPlatform.Areas.Admin.Models.Actors.ActorViewModel

@{
    var title = T("Nop.Plugin.Baramjk.PhotoPlatform.Admin.Actor.CreateNewActor").Text;
    ViewBag.PageTitle = title;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    Html.SetActiveMenuItemSystemName($"{SystemName}.Actors");
}
<section class="content">
<form asp-controller="Actor" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @title
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-controller="Actor" asp-action="List">
                    @T("Nop.Plugin.Baramjk.PhotoPlatform.Admin.Actor.BackToActorsList")
                </a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync($"~/Plugins/{SystemName}/Areas/Admin/Views/Actors/_CreateOrUpdate.cshtml", Model)
    @await Html.PartialAsync($"~/Plugins/{SystemName}/Areas/Admin/Views/Actors/_CreateOrUpdatePicture.cshtml", Model)
</form>
</section>

