
@model Nop.Plugin.Baramjk.Core.MyFatoorah.Models.PaymentFeeRule.PaymentFeeRuleViewModel

@{
    var title = T("Plugins.Payments.MyFatoorah.Admin.PaymentFeeRule.AddNew").Text;
    ViewBag.PageTitle = title;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    Html.SetActiveMenuItemSystemName($"{SystemName}.PaymentFeeRule");
}
<section class="content">
    <form asp-controller="PaymentFeeRule" asp-action="Create" method="post">
        <div class="content-header clearfix">
            <h1 class="float-left">
                @title
                <small>
                    <i class="fas fa-arrow-circle-left"></i>
                    <a asp-controller="PaymentFeeRule" asp-action="List">
                        @T("Plugins.Payments.MyFatoorah.Admin.PaymentFeeRule.BackToPaymentFeeRulesList")
                    </a>
                </small>
            </h1>
            <div class="float-right">
                <button type="submit" name="save" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.Save")
                </button>
                <button type="submit" name="save-continue" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.SaveContinue")
                </button>
            </div>
        </div>
        @await Html.PartialAsync($"~/Plugins/{SystemName}/Views/PaymentFeeRule/_CreateOrUpdate.cshtml", Model)
    </form>
</section>

