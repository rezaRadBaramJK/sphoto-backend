@model List<Nop.Plugin.Baramjk.Wallet.Services.Models.WithdrawRequestItem>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-header clearfix">
    <h1 class="pull-left">
        Withdraw Requests
    </h1>
</div>

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table id="bid_table" class="table table-bordered table-hover table-striped dataTable no-footer">
                        <tr>
                            <th>Id</th>
                            <th>Email</th>
                            <th>CurrencyCode</th>
                            <th>Amount</th>
                            <th>CartNumber</th>
                            <th>IBAN</th>
                            <th>Account Number</th>
                            <th>Bank Name</th>
                            <th>Status</th>
                            <th>OnDateTime</th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Email</td>
                                <td>@item.CurrencyCode</td>
                                <td>@item.Amount</td>
                                <td>@item.CartNumber</td>
                                <td>@item.IBAN</td>
                                <td>@item.AccountNumber</td>
                                <td>@item.BankName</td>
                                <td>
                                    @{
                                        var status = item.Status switch{
                                            true=> "Accept",
                                            false => "Reject",
                                            _ => "No Action"
                                            };
                                    }

                                    @status
                                </td>


                                <td>@item.OnDateTime</td>
                                <td>
                                    @if (!item.Status.HasValue)
                                    {
                                        <a class="btn btn-default"
                                           href="/Admin/WalletWithdraw/SetStatus?id=@item.Id&status=True">
                                            <i class="fa fa-check"></i> Accept
                                        </a>
                                        <a class="btn btn-default"
                                           href="/Admin/WalletWithdraw/SetStatus?id=@item.Id&status=False">
                                            <i class="fa fa-remove"></i> Reject
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    #bid_table tr>*{
        margin: 0px;
        outline: none;
        padding: 5px;
        box-sizing: border-box;
        min-width: 50px;
        border: 1px solid rgb(221, 221, 221) !important;
        color: rgb(92, 91, 91);
        width: 204.812px;
        clear: both;
        font-size: 1.1em;
        font-weight: 700;
    }
</style>