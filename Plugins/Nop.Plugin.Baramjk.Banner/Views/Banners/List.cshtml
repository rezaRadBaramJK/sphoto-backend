@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Nop.Web.Framework.Models.DataTables
@using Nop.Services.Common
@using Nop.Core
@using Nop.Plugin.Baramjk.Banner.Models
@using Nop.Web.Framework.TagHelpers.Admin
@inject IGenericAttributeService genericAttributeService
@inject IWorkContext workContext
@model Nop.Plugin.Baramjk.Banner.Models.BannerSearchModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    Html.SetActiveMenuItemSystemName("Baramjk.Banner");

    const string hideSearchBlockAttributeName = "BannerList.HideSearchBlock";
    var hideSearchBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideSearchBlockAttributeName);
}

<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Admin.Plugins.Banner.List")
    </h1>
    <div class="float-right">
        <a asp-action="Add" class="btn bg-blue">
            <i class="fa fa-plus-square"></i>
            @T("Admin.Common.AddNew")
        </a>
    </div>
</div>

<div class="form-horizontal">
    <div class="cards-group">
        <div class="card card-default card-search">
            <div class="card-body">
                <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                    <div class="search-text">@T("Admin.Common.Search")</div>
                    <div class="icon-search"><i class="fa fa-search" aria-hidden="true"></i></div>
                    <div class="icon-collapse"><i class="fa fa-angle-down" aria-hidden="true"></i></div>
                </div>

                <div class="search-body @(hideSearchBlock ? "closed" : "")">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-label asp-for="SearchTitle" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="SearchTitle" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-label asp-for="SearchTag" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="SearchTag" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-label asp-for="SearchEntityName" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="SearchEntityName" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-label asp-for="SearchEntityId" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="SearchEntityId" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-label asp-for="SearchExpirationDateFrom" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="SearchExpirationDateFrom" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-label asp-for="SearchExpirationDateTo" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="SearchExpirationDateTo" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="text-center col-12">
                            <button type="button" id="search-banners" class="btn btn-primary btn-search">
                                <i class="fa fa-search"></i>
                                @T("Admin.Common.Search")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card card-default">
            <div class="card-body">
                @await Html.PartialAsync("Table", new DataTablesModel
                {
                    Name = "banners-grid",
                    UrlRead = new DataUrl("List", "Banner", null),
                    UrlDelete = new DataUrl("Delete", "Banner", null),
                    SearchButtonId = "search-banners",
                    Length = Model.PageSize,
                    LengthMenu = Model.AvailablePageSizes,
                    Filters = new List<FilterParameter>
                    {
                        new FilterParameter(nameof(Model.SearchTitle)),
                        new FilterParameter(nameof(Model.SearchTag)),
                        new FilterParameter(nameof(Model.SearchEntityName)),
                        new FilterParameter(nameof(Model.SearchEntityId)),
                        new FilterParameter(nameof(Model.SearchExpirationDateFrom)),
                        new FilterParameter(nameof(Model.SearchExpirationDateTo))
                    },
                    ColumnCollection = new List<ColumnProperty>
                    {
                        new ColumnProperty(nameof(BannerListItemModel.Id))
                        {
                            IsMasterCheckBox = true,
                            Render = new RenderCheckBox("checkbox_banners"),
                            ClassName = NopColumnClassDefaults.CenterAll,
                            Width = "50",
                            Visible = false
                        },
                        new ColumnProperty(nameof(BannerListItemModel.Title))
                        {
                            Title = T("Admin.Plugins.Banner.Fields.Title").Text,
                            Width = "200"
                        },
                        new ColumnProperty(nameof(BannerListItemModel.Text))
                        {
                            Title = T("Admin.Plugins.Banner.Fields.Text").Text,
                            Width = "300"
                        },
                        new ColumnProperty(nameof(BannerListItemModel.FileName))
                        {
                            Title = T("Admin.Plugins.Banner.Fields.FileName").Text,
                            Width = "300",
                            Render = new RenderCustom("RenderFile")
                        },
                        new ColumnProperty(nameof(BannerListItemModel.EntityName))
                        {
                            Title = T("Admin.Plugins.Banner.Fields.EntityName").Text,
                            Width = "150"
                        },
                        new ColumnProperty(nameof(BannerListItemModel.EntityId))
                        {
                            Title = T("Admin.Plugins.Banner.Fields.EntityId").Text,
                            Width = "100"
                        },
                        new ColumnProperty(nameof(BannerListItemModel.ExpirationDateTime))
                        {
                            Title = T("Admin.Plugins.Banner.Fields.ExpirationDateTime").Text,
                            Width = "150",
                            Render = new RenderDate()
                        },
                        new ColumnProperty(nameof(BannerListItemModel.Id))
                        {
                            Title = T("Admin.Common.Edit").Text,
                            Width = "100",
                            ClassName = NopColumnClassDefaults.Button,
                            Render = new RenderButtonEdit(new DataUrl("Edit"))
                        },
                        new ColumnProperty(nameof(BannerListItemModel.Id))
                        {
                            Title = T("Admin.Common.Delete").Text,
                            Width = "100",
                            ClassName = NopColumnClassDefaults.Button,
                            Render = new RenderButtonRemove(T("Admin.Common.Delete").Text)
                        }
                    }
                })
            </div>
        </div>
    </div>
</div>

<script>
function  RenderFile(x,y,row){
    if ( row.BannerType!=="Picture")
    return `<a target="_blank" href="/banner/GetFile/${row.FileName}"> ${row.BannerTypeName}</a>`;

    return `<a target="_blank" href="/banner/GetFile/${row.FileName}">
                <img src="/banner/GetFile/${row.FileName}" width="100" />
            </a>`;
    }
</script>
