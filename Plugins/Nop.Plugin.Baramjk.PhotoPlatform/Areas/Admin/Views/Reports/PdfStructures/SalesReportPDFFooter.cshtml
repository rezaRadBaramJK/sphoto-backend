@{
    Layout = null;
    var dateStr = ViewBag.DateStr as string;
    var pageNum = ViewBag.Page;
    var toPage = ViewBag.ToPage;
}
<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8"/>
    <style>
        body {
            margin: 20px;
            padding: 0;
            font-family: Arial, sans-serif;
        }
        .footer-bar {
            box-sizing: border-box;
            width: 100%;
            background: #005a9c;
            color: #fff;
            padding: 4px 10px;
            font-weight: normal;
            font-size: 16px;

            overflow: hidden;
        }
        .footer-left {
            float: left;
        }
        .footer-right {
            float: right;
        }
    </style>
</head>
<body>
<div class="footer-bar">
    <div class="footer-left">@dateStr</div>
    <div class="footer-right">Page @pageNum of @toPage</div>
</div>
</body>
</html>
