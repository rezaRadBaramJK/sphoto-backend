@using Nop.Plugin.Baramjk.Framework.Models.ViewModels
@using Nop.Plugin.Baramjk.Framework
@using Nop.Plugin.Baramjk.OrderPaymentLink.Plugins
@model Nop.Plugin.Baramjk.OrderPaymentLink.Models.OrderPaymentLinkSettingsModel

@{
// ReSharper disable once Razor.LayoutNotResolved
Layout = FrameworkDefaultValues.ConfigureLayoutViewPath;
ViewBag.ConfigureModel = new DefaultConfigureViewModel(typeof(OrderPaymentLinkPlugin), "OrderPaymentPlugin");
}

<form asp-controller="OrderPaymentPlugin" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="Message"/>
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-5">
                                <textarea class="form-control text-box" asp-for="Message"></textarea>
                                <span asp-validation-for="Message"></span>
                            </div>

                            <div class="col-md-7">
                                <div class="callout bg-gray-light no-margin">Invoice link will automatically be inserted in the messages which have
                                    {url}
                                </div>

                            </div>
                        </div>

                    </div>


                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <nop-label asp-for="LinkExpireAfterMinutes"/>
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="LinkExpireAfterMinutes"/>
                    <span asp-validation-for="LinkExpireAfterMinutes"></span>
                </div>
            </div>

        </div>
    </div>
</form>