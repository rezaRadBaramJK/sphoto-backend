@using Nop.Plugin.Baramjk.PhotoPlatform.Areas.Admin.Models.CashierEvents
@model CashierDailyBalanceViewModel

@{
    ViewBag.PageTitle = T("Nop.Plugin.Baramjk.PhotoPlatform.Admin.CashierEvent.DailyBalance").Text;
    Layout = "~/Areas/Admin/Views/Shared/_AdminPopupLayout.cshtml";
    var eventId = Context.Request.Query["EventId"];
}


<form asp-controller="CashierEvent" asp-action="EditCashierDailyBalancePopup" method="post" id="edit-daily-balance-form">
    <input type="hidden" name="EventId" value="@eventId"/>
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Nop.Plugin.Baramjk.PhotoPlatform.Admin.CashierEvent.DailyBalance")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>


        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <div class="card card-default">
                    <div class="card-body">


                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="Day"/>
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="Day"/>
                                <span asp-validation-for="Day"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="OpeningFundBalanceAmount"/>
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="OpeningFundBalanceAmount"/>
                                <span asp-validation-for="OpeningFundBalanceAmount"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="CashierId"/>
                            </div>
                            <div class="col-md-9">
                                <nop-select
                                    asp-for="CashierId"
                                    asp-items="Model.AvailableCashiers"/>

                                <span asp-validation-for="CashierId" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</form>


<script>
    $('#edit-daily-balance-form').on('submit', function (e) {
        e.preventDefault();
        const form = this;
        const data = $(form).serialize();
        $.post(form.action, data)
            .done(function () {
                const refreshBtnId = @Html.Raw(Json.Serialize(Context.Request.Query["RefreshBtnId"]));
                window.opener?.document.getElementById(refreshBtnId)?.click();
                window.close();
            })
            .fail(function (err) {
                console.log(err)

            });
    });
</script>