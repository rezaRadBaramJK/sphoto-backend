@model Nop.Plugin.Baramjk.PhotoPlatform.Areas.Admin.Models.Reports.Cashier.CashierReportPdfDataModel
@{
    var index = 1;
    var reportDate = $"{DateTime.Now:MMMM dd yyyy}";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <title>@T("Nop.Plugin.Baramjk.PhotoPlatform.Admin.Report.Pdf.CashierReport.Title").Text</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            width: 100%;
            box-sizing: border-box;
        }

        .container {
            width: 100%;
            margin: 0 auto;

        }

        .date {
            font-size: 14px;
        }

        .title {
            font-size: 22px;
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th {
            border-bottom: 2px solid #000;
            padding: 8px;
            text-align: right;
        }

        td {
            border: none;
            padding: 8px;
            text-align: right;
        }


        .spacer {
            background-color: #000;
            padding: 1px 0;
            margin: 1px;
        }
    </style>
</head>
<body>
<div class="container">

    <div class="date">
        <span>@T("Nop.Plugin.Baramjk.PhotoPlatform.Admin.Report.Pdf.CashierReport.PrintDate").Text</span>
        <span> @reportDate</span>
    </div>
    <table style="border-collapse: collapse; width: 100%; height:60px; margin-top: 10px">
        <tr>
            <td style="text-align: center; vertical-align: middle;">
                <img src="~/Plugins/Baramjk.PhotoPlatform/Areas/Admin/Contents/Images/sami-main-logo.png" alt="logo" style="height: 50px;" />
            </td>
        </tr>
    </table>


    <div class="title">@T("Nop.Plugin.Baramjk.PhotoPlatform.Admin.Report.Pdf.CashierReport.Title").Text</div>
    <div class="spacer"></div>

    <table
        style="width: 100%; border-collapse: collapse; margin: 10px 0;font-weight: bold;"
    >
        <tr>
            <td style="padding: 2px; text-align: right">@T("Nop.Plugin.Baramjk.PhotoPlatform.Admin.Report.Pdf.CashierReport.Day").Text</td>
            <td style="padding: 2px; text-align: right">@Model.EventDate</td>
            <td style="padding: 2px; text-align: right">@T("Nop.Plugin.Baramjk.PhotoPlatform.Admin.Report.Pdf.CashierReport.TimeSlot").Text</td>
            <td style="padding: 2px; text-align: right">@Model.EventTime</td>
        </tr>
        <tr>
            <td style="padding: 2px; text-align: right">@T("Nop.Plugin.Baramjk.PhotoPlatform.Admin.Report.Pdf.CashierReport.EventName").Text</td>
            <td style="padding: 2px; text-align: right"></td>
            <td style="padding: 2px; text-align: right">
                @Model.EventName
            </td>
            <td style="padding: 2px; text-align: center"></td>
        </tr>
    </table>
    <div class="spacer"></div>


    <table>
        <colgroup>
            <col style="width: 20%;">
            <col style="width: 60%;">
            @if (Model.ShowTicketsCount)
            {
                <col style="width: 20%;">
            }
        </colgroup>
        <thead>
        <tr>
            <th>@T("Nop.Plugin.Baramjk.PhotoPlatform.Admin.Report.Pdf.CashierReport.Row").Text</th>
            <th>@T("Nop.Plugin.Baramjk.PhotoPlatform.Admin.Report.Pdf.CashierReport.ActorName").Text</th>
            @if (Model.ShowTicketsCount)
            {
                <th>@T("Nop.Plugin.Baramjk.PhotoPlatform.Admin.Report.Pdf.CashierReport.VerifiedPhotosCount").Text</th>
            }

        </tr>
        </thead>
        <tbody>

        @foreach (var reservation in Model.Reservations)
        {
            <tr>
                <td>@index</td>
                <td>@reservation.ActorName</td>
                @if (Model.ShowTicketsCount)
                {
                    <td>@reservation.VerifiedPhotosCount</td>
                }

            </tr>
            index++;
        }

        </tbody>
    </table>

</div>
</body>
</html>